Screen:
    MDCard:
        size_hint: None, None
        size: root.width / 1.3, root.height / 1.8
        pos_hint: {'center_x': .5, 'center_y': 0.5}
        elevation: 10
        padding: 25
        spacing: 25

        orientation: 'vertical'

        MDLabel:
            id: librus_label
            text: 'Librus'
            font_size: root.height / 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        
        MDTextFieldRound:
            id: login
            hint_text: 'Login'
            icon_right: 'account'
            size_hint_x: None
            width: root.width / 1.75
            font_size: root.height / 30
            pos_hint: {'center_x': .5}

        MDTextFieldRound:
            id: haslo
            hint_text: 'Hasło'
            icon_right: 'eye-off'
            password: True
            size_hint_x: None
            width: root.width / 1.75
            font_size: root.height / 30
            pos_hint: {'center_x': .5}

        MDTextFieldRound:
            id: nr
            hint_text: 'Nr'
            size_hint_x: None
            width: root.width / 1.75
            font_size: root.height / 30
            pos_hint: {'center_x': .5}

        MDRoundFlatButton:
        	text: 'Zaloguj'
        	font_size: root.height / 30
        	pos_hint: {'center_x':.5}
        	on_press: app.logIn()

		MDRoundFlatButton:
        	text: 'Wyczyść'
        	font_size: root.height / 30
        	pos_hint: {'center_x':.5}
        	on_press: app.clear()

	MDLabel:
    	id: zalogowano
		font_size: root.height / 20
		halign: 'center'
		height: self.texture_size[1]
		padding_y: 15
		pos_hint: {'center_x': .5,'center_y':.1}
